<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zyq.loginactivity.MainActivity"
    android:id="@+id/loginLayout"
    android:clickable="true">
    <ImageView
        android:id="@+id/loginImageView"
        android:layout_width="351dp"
        android:layout_height="102dp"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="71dp" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="347dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint=" 密码"
        android:inputType="textPersonName"
        android:layout_marginTop="51dp"
        app:layout_constraintTop_toBottomOf="@+id/et_username"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="parent"
        android:cursorVisible="false"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:background="@drawable/bg_edittext"
        android:maxLength="16"
        />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="350dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint=" 用户名"
        android:background="@drawable/bg_edittext"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toBottomOf="@+id/loginImageView"
        android:layout_marginRight="7dp"
        app:layout_constraintRight_toRightOf="parent"
        android:cursorVisible="false"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        android:maxLength="15"
        />


    <Button
        android:id="@+id/registerButton_loginLayout"
        android:layout_width="108dp"
        android:layout_height="47dp"
        android:text="注册"
        android:layout_marginTop="84dp"
        app:layout_constraintTop_toBottomOf="@+id/et_password"
        app:layout_constraintLeft_toRightOf="@+id/loginButton_loginLayout"
        android:layout_marginLeft="133dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.083" />
    <Button
        android:id="@+id/loginButton_loginLayout"
        android:layout_width="108dp"
        android:layout_height="47dp"
        android:text="登陆"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="84dp"
        app:layout_constraintTop_toBottomOf="@+id/et_password" />

    <CheckBox
        android:id="@+id/rememberPassword"
        android:layout_width="127dp"
        android:layout_height="29dp"
        android:text="记住密码"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/et_password"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:id="@+id/usernameTips_loginLayout"
        android:layout_width="349dp"
        android:layout_height="19dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_username" />
    <TextView
        android:id="@+id/passwordTips_loginLayout"
        android:layout_width="349dp"
        android:layout_height="19dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/et_password" />


</android.support.constraint.ConstraintLayout>