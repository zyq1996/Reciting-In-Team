<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_search"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:hint="Please enter the word here"
        android:inputType="text"
        android:selectAllOnFocus="false"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp"
        android:layout_alignBottom="@+id/img_btn_search"
        android:layout_alignRight="@+id/img_btn_reciteword"
        android:layout_alignEnd="@+id/img_btn_reciteword"
        android:layout_alignTop="@+id/img_btn_search"
        />

    <ImageButton
    android:id="@+id/img_btn_search"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:srcCompat="@android:drawable/ic_menu_search"
    android:layout_marginTop="11dp"
    android:layout_alignParentTop="true"
    android:layout_toRightOf="@+id/et_search"
    android:layout_toEndOf="@+id/et_search"
    android:layout_marginLeft="18dp"
    android:layout_marginStart="18dp"
    android:onClick="startSearchActivity"
        />

    <ImageButton
    android:id="@+id/img_btn_reciteword"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@color/colorPrimaryLight"
    android:onClick="startWordActivity" />

</RelativeLayout>